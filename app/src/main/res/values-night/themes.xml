<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize the color palette -->
        <item name="colorPrimary">@color/environment_green</item> <!-- Main color representing environmental friendliness -->
        <item name="colorPrimaryVariant">@color/environment_dark_green</item> <!-- Darker shade of the main color -->
        <item name="colorOnPrimary">@color/environment_green</item> <!-- Text color on the primary color -->
        <item name="colorSecondary">@color/environment_blue</item> <!-- Secondary color representing water or sky -->
        <item name="colorSecondaryVariant">@color/environment_dark_blue</item> <!-- Darker shade of the secondary color -->
        <item name="colorOnSecondary">@color/black</item> <!-- Text color on the secondary color -->
        <item name="colorSurface">@color/environment_green</item> <!-- Background color of surfaces -->
        <item name="colorOnSurface">@color/black</item> <!-- Text color on surfaces -->
        <item name="colorError">@color/environment_red</item> <!-- Color for error messages -->
        <item name="colorOnError">@color/environment_green</item> <!-- Text color on error color -->
    </style>
</resources>